    #args = ["-F Makefile.win", "MODEL=static", "ARCH=\"x64 Release\""],
    args = ["-F Makefile.win", "MODEL=static", "ARCH=\"x64 Release\""],
    targets = ["buildall"],
    lib_source = ":all_srcs",
    lib_name = LIB_NAME,
    out_static_libs = ["apr-1.lib"],
    out_lib_dir = "x64/LibR",
    visibility = ["//visibility:public"],
)

configure_make(
    name = "apr_default",
    configure_in_place = True,
    configure_options = [
        "--disable-shared",
    ],
    env = select({
        "@platforms//os:macos": {"AR": ""},
        "//conditions:default": {},
    }),
    lib_source = ":all_srcs",
    lib_name = LIB_NAME,
    out_static_libs = ["libapr-1.a"],
